<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Nota de Entrega</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-size: 12px;
        }
        .qr-code {
            width: 100px;
            height: 100px;
        }
        .table td, .table th {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        <h3 class="text-center">LABORATORIOS IFA</h3>
        <h5 class="text-center">NOTA DE ENTREGA #<%= data.DocNum %></h5>
        <hr>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Usuario:</strong> <%= data.USER_CODE %></p>
                <p><strong>Creado por:</strong> <%= data.U_NAME %></p>
                <p><strong>Fecha de creación:</strong> <%= data.DocDate %></p>
                <p><strong>Teléfono:</strong> <%= data.Phone1 %></p>
                <p><strong>Dirección:</strong> <%= data.Address2 %></p>
                <p><strong>Zona:</strong> <%= data.U_Zona %></p>
                <p><strong>Cliente:</strong> <%= data.CardCode %> - <%= data.CardName %></p>
                <p><strong>Condición de pago:</strong> <%= data.PymntGroup %></p>
                <p><strong>Total:</strong> <%= parseFloat(data.DocTotal).toFixed(2) %> BOB</p>
            </div>
            <div class="col-md-6 text-center">
                <img class="qr-code" src="<%= qrCode %>" alt="QR Code">
            </div>
        </div>
        <hr>
        <h5>Detalles</h5>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Lote</th>
                    <th>Fecha Exp.</th>
                    <th>Cant.</th>
                    <th>Precio</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% data.detailsList.forEach(item => { %>
                    <tr>
                        <td><%= item.ItemCode %></td>
                        <td><%= item.Dscription %></td>
                        <td><%= item.BatchNum %></td>
                        <td><%= new Date(item.ExpDate).toLocaleDateString() %></td>
                        <td><%= item.Quantity %></td>
                        <td><%= parseFloat(item.Price).toFixed(2) %></td>
                        <td><%= parseFloat(item.LineTota).toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
